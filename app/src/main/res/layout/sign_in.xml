<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="327dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="300dp"
                android:layout_height="243dp"
                android:layout_marginTop="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/food_delivery_to_customer_home" />

            <TextView
                android:id="@+id/logo_txt"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/open_sans"
                android:text="SIGN IN"
                android:textColor="#06623B"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="167dp">

            <View
                android:id="@+id/username_view"
                android:layout_width="319dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/rectangle_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/username_icon"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginStart="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/username_view"
                app:layout_constraintStart_toStartOf="@+id/username_view"
                app:layout_constraintTop_toTopOf="@+id/username_view"
                app:srcCompat="@drawable/person_outline_black_18dp_1" />

            <TextView
                android:id="@+id/username_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Username"
                android:textColor="#A7A7A7"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/username_icon"
                app:layout_constraintStart_toEndOf="@+id/username_icon"
                app:layout_constraintTop_toTopOf="@+id/username_icon" />

            <View
                android:id="@+id/password_view"
                android:layout_width="319dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username_view" />

            <ImageView
                android:id="@+id/password_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/password_view"
                app:layout_constraintStart_toStartOf="@+id/password_view"
                app:layout_constraintTop_toTopOf="@+id/password_view"
                app:srcCompat="@drawable/vector__1_" />

            <TextView
                android:id="@+id/password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/open_sans"
                android:text="Password"
                android:textColor="#A7A7A7"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/password_icon"
                app:layout_constraintStart_toEndOf="@+id/password_icon"
                app:layout_constraintTop_toTopOf="@+id/password_icon" />

            <ImageView
                android:id="@+id/show_password_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="157dp"
                app:layout_constraintBottom_toBottomOf="@+id/password_txt"
                app:layout_constraintStart_toEndOf="@+id/password_txt"
                app:layout_constraintTop_toTopOf="@+id/password_txt"
                app:srcCompat="@drawable/remove_red_eye_24px_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/sign_in_btn2"
                android:layout_width="319dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="34dp"
                android:background="@drawable/rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sign_in_btn2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="SIGN IN"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/sign_in_btn2"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_btn2"
                app:layout_constraintStart_toStartOf="@+id/sign_in_btn2"
                app:layout_constraintTop_toTopOf="@+id/sign_in_btn2" />

            <TextView
                android:id="@+id/sign_in_txt3"
                android:layout_width="121dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal|top"
                android:text="@string/forgot_pass"
                android:textAppearance="@style/forgot_pass"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_btn2" />

            <TextView
                android:id="@+id/sign_up_txt3"
                android:layout_width="51dp"
                android:layout_height="19dp"
                android:layout_marginEnd="84dp"
                android:fontFamily="@font/open_sans"
                android:text="Sign Up"
                android:textColor="#06623B"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/sign_in_txt3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sign_in_txt3"
                app:layout_constraintTop_toTopOf="@+id/sign_in_txt3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>